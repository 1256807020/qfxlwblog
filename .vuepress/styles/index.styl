.theme-default-content
  p > code, li > code
    background-color transparent
    color #f12357
    font-size 1em
    border none
    padding 2px 4px

// 解决代码块导致横向滚动
.theme-default-content li>code, .theme-default-content p>code
  word-break break-word

div[class*="language-"]
  border-radius: 6px!important;
  margin: 0!important;

// pre添加阴影
div[class*="language-"] pre, div[class*="language-"] pre[class*="language-"]
  box-shadow rgba(0, 0, 0, 0.55) 0px 2px 10px
  padding 0

// 关键词样式修改
.token.selector, .token.important, .token.atrule, .token.keyword, .token.builtin
  color: #c678dd;

// 注释修改
.token.comment, .token.block-comment, .token.prolog, .token.doctype, .token.cdata
  color: #5c6370;
  font-style: italic;
  line-height: 26px;

// code标签样式修改
.theme-default-content pre code, .theme-default-content pre[class*="language-"] code
  overflow-x: auto;
  padding: 16px;
  color: #abb2bf;
  display: block;
  font-family: Operator Mono, Consolas, Monaco, Menlo, monospace;
  font-size: 12px;
  -webkit-overflow-scrolling: touch;
  padding-top: 15px;
  background: #282c34;
  border-radius: 5px;
  &::-webkit-scrollbar
    height: 4px;
    width: 100%;
    background-color: transparent;
  &::-webkit-scrollbar-thumb
    border-radius 30px
    background-color #5b5b5b

blockquote
  border-left-color $accentColor
  background-color: #2a5bb81f
  color: #4e5356;



